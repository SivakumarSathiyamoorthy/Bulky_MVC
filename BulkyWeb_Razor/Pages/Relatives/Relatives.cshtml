@page
@model BulkyWeb_Razor.Pages.Relatives.RelativesModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary"> Relatives List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Relatives/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Create New Relative
            </a>
        </div>

    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>Relative Name</td>
                <td>Relationship</td>
                <td></td>
            </tr>

        </thead>
        <tbody>

            @foreach (var obj in Model.RelativesList.OrderBy(u => u.RelativeId))
            {
                <tr>
                    <td>@obj.RelativeName</td>
                    <td>@obj.Relationship</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Relatives/Edit" asp-route-id="@obj.RelativeId" class="btn btn-primary mx-2">
                                <i class="bi bi-pen-fill"></i> Edit
                            </a>
                            <a asp-page="/Relatives/Delete" asp-route-id="@obj.RelativeId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
