@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <div class="row mb-3 p-1">
            <label asp-for="Name" class="p-0"> </label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for=DisplayOrder class="p-0"> </label>
            <input asp-for=DisplayOrder class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Save</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn-outline-secondary border form-control">BackToList</a>
            </div>

        </div>


        @*    <button type="submit" class="btn btn-primary" style="width=150px">Back To List</button> *@

    </div>

</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}


